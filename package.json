{
  "name": "track-trimmer-pro",
  "version": "1.0.0",
  "description": "Track Trimmer Pro - Professional batch audio trimming and conversion tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder",
    "dist:mas": "electron-builder build --mac --universal",
    "postinstall": "node -e \"require('fs').copyFileSync(require('ffmpeg-static'), 'ffmpeg-placeholder')\""
  },
  "keywords": [
    "track",
    "trimmer",
    "audio",
    "processor",
    "trim",
    "fade"
  ],
  "author": "Steven Adams",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.stevenadams.tracktrimmerpro",
    "productName": "Track Trimmer Pro",
    "copyright": "Copyright Â© 2026",
    "directories": {
      "output": "dist"
    },
    "asarUnpack": [
      "node_modules/ffmpeg-static/**/*",
      "node_modules/ffprobe-static/**/*",
      "**/ffmpeg*"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg.exe",
        "to": "ffmpeg.exe",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/ffprobe-static/bin/win32/x64/ffprobe.exe",
        "to": "ffprobe.exe",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": ["appx"],
      "icon": "build/icon.ico"
    },
    "appx": {
      "identityName": "StevenAdams.TrackTrimmerPro",
      "publisher": "CN=94BADBBF-708B-44BF-8A29-0CDD6BFF55B7",
      "publisherDisplayName": "Steven Adams",
      "applicationId": "TrackTrimmerPro",
      "languages": ["en-US"]
    },
    "mac": {
      "target": [
        {
          "target": "mas",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "x64ArchFiles": "**/ffmpeg-x64",
      "extraResources": [
        {
          "from": "node_modules/ffmpeg-static/ffmpeg",
          "to": "ffmpeg"
        },
        {
          "from": "node_modules/ffprobe-static/bin/darwin/x64/ffprobe",
          "to": "ffprobe"
        },
        {
          "from": "node_modules/ffprobe-static/bin/darwin/arm64/ffprobe",
          "to": "ffprobe-arm64"
        }
      ]
    },
    "mas": {
      "type": "distribution",
      "hardenedRuntime": false,
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "extraResources": [
        {
          "from": "node_modules/ffmpeg-static/ffmpeg",
          "to": "ffmpeg"
        },
        {
          "from": "node_modules/ffprobe-static/bin/darwin/x64/ffprobe",
          "to": "ffprobe"
        },
        {
          "from": "node_modules/ffprobe-static/bin/darwin/arm64/ffprobe",
          "to": "ffprobe-arm64"
        }
      ]
    }
  }
}
